//Debemos lograr mostrar un mensaje al presionar el botón  'MOSTRAR'.
function Mostrar()
{

	//Realizar el algoritmo que al presionar el botón "Mostrar" pida dos números por prompt, si son iguales que
	//los multiplique, si el primero es mayor al segundo que los reste y si no que los sume, mostrar el resultado 
	//por document.write.

	
	var numeroUno;
	var numeroDos;
	var resultado;

 	numeroUno= prompt("ingrese un numero");
 	numeroUno= parseInt(numeroUno);

 	numeroDos= prompt("ingrese un numero");
 	numeroDos= parseInt(numeroDos);

	if (numeroUno == numeroDos)
	
	{
			resultado = numeroUno * numeroDos;
			//resultado = numeroUno + "" + numeroDos; //string es para concadenar
 
			}
				else
				{

					if(numeroUno > numeroDos)
					{

					resultado= numeroUno - numeroDos;

					}
					else
					{

						resultado= numeroUno + numeroDos;
					}
				}	

		document.write("<br> el resultado es " + resultado);	
}
}

