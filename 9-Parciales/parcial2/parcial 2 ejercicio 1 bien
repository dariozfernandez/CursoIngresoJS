//Debemos lograr mostrar un mensaje al presionar el botón  'MOSTRAR'.
function Mostrar()
{
	//Realizar el algoritmo que al presionar el botón "Mostrar" lea la base de un triangulo equilatero
	// por ID, e informar el perímetro del mismo por alert 

	var laBase;
 	var perímetro;

 laBase = document.getElementById('lado').value;
 laBase = parseInt(laBase);
 							 //parseFloat(altura) parseFloat, te da la precision decimal, parseint solo el numero
 							//ejemplo= poniendo 50.5 parseint te da solo 50, parseFloat te da 50.5

perimetro = laBase * 3

alert("el perimetro es " + perimetro);
}

